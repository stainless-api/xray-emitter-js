{
  "name": "xray-js",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "exports": {
    "./express": {
      "types": "./dist/express.d.ts",
      "import": "./dist/express.js",
      "require": "./dist/express.cjs"
    },
    "./hono": {
      "types": "./dist/hono.d.ts",
      "import": "./dist/hono.js",
      "require": "./dist/hono.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "turbo run build && tsup",
    "build:root": "tsup",
    "test": "turbo run test && tsx --test src/**/*.test.ts",
    "test:root": "tsx --test src/**/*.test.ts",
    "typecheck": "turbo run typecheck && tsc --noEmit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "oxfmt --write packages examples src",
    "format:check": "oxfmt --check packages examples src",
    "clean": "turbo run clean && rm -rf dist",
    "release": "node scripts/release.js",
    "example:edge": "pnpm --filter ./examples/edge start",
    "example:express": "pnpm --filter ./examples/express start",
    "example:fastify": "pnpm --filter ./examples/fastify start",
    "example:hono": "pnpm --filter ./examples/hono start",
    "example:next": "pnpm --filter ./examples/next-app start",
    "example:node-http": "pnpm --filter ./examples/node-http start",
    "example:remix": "pnpm --filter ./examples/remix-app start"
  },
  "dependencies": {
    "@stainlessdev/xray-core": "workspace:*",
    "@stainlessdev/xray-fetch": "workspace:*",
    "@stainlessdev/xray-node": "workspace:*"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.2.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.29.0",
    "@types/express": "^5.0.0",
    "@types/node": "^20.19.29",
    "express": "^5.2.1",
    "hono": "^4.11.4",
    "oxfmt": "^0.24.0",
    "tsup": "^8.0.0",
    "tsx": "^4.19.0",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  }
}
